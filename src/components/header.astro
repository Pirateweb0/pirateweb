---
import logo from "../images/favicon.png";
import iglogo from "../images/instagram.png";
---
<div class="flex flex-col md:flex-row md:pl-40 md:gap-0 box-borde md:sticky md:top-5 z-20">
    <div class="my-auto m-5 mx-auto">
        <img src={logo} alt="pirate web logo" class="w-28 md:w-28">
    </div>
    <div class="flex flex-col justify-center md:flex-row md:justify-between w-full">
        <div class="flex text-center justify-center mb-5 md:mb-20 my-auto h-full w-full md:justify-start md:ml-5">
            <h2 id="titulo" class="text-white text-3xl my-auto" style="text-shadow: 10px 10px 5px black;">PIRATE WEB</h2>
        </div>
        <div class="flex flex-row justify-center md:justify-end md:pr-10 gap-5 text-white pt-5 w-full md:w-1/2">
            <div class="">
                <a href="" class="hover:text-gray-500">Inicio</a>
            </div>
            <div>
                <a href="#contacto" class="hover:text-gray-500">Contacto</a>
            </div>
            <div class="">
                <div class="">
                    <a href="https://www.instagram.com/pirate.web_/" target="_blank"><img src={iglogo} alt="" class="w-5 hover:opacity-60"></a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @font-face {
        font-family: f;
        src: url("/fonts/Montserrat-Black.ttf");
    }
    #titulo{
        font-family: f;
    }
</style>